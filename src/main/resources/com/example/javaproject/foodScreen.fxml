<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javaproject.controllers.FoodController">
    <fx:include source="menuBar.fxml"/>
    <Label layoutX="186.0" layoutY="50.0" text="Search for food items">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Text layoutX="212.0" layoutY="117.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Filter by name:"/>
    <TextField fx:id="textField" layoutX="300.0" layoutY="100.0" onKeyTyped="#onKeyTyped"/>
    <TableView fx:id="tableViewFood" layoutY="200.0" prefHeight="200.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="tableColumnId" prefWidth="129.0" text="Id"/>
            <TableColumn fx:id="tableColumnName" prefWidth="200.0" text="Name"/>
            <TableColumn fx:id="tableColumnPrice" prefWidth="50.0" text="Price"/>
            <TableColumn fx:id="tableColumnQuantity" prefWidth="54.0" text="Quantity"/>
            <TableColumn fx:id="tableColumnProteins" prefWidth="51.0" text="Proteins"/>
            <TableColumn fx:id="tableColumnCarbohydrates" prefWidth="87.0" text="Carbohydrates"/>
            <TableColumn fx:id="tableColumnFats" prefWidth="27.0" text="Fats"/>
        </columns>
    </TableView>
</Pane>